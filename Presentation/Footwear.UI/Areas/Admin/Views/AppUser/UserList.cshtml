@model List<ResultUserDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Kullanıcı Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kullanıcı</th>
                            <th scope="col">Ad Soyad</th>
                            <th scope="col">Email</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="mb-0 text-sm">@item.Id</span>
                                            </div>
                                        </div>
                                    </th>
                                    <td>
                                        <img src="@item.ImageUrl" style="width:75px; height:75px; border-radius:15px;"/>
                                        @item.UserName
                                    </td>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="badge badge-dot mr-4">
                                            @item.RoleName
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/Admin/AppUser/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Admin/AppUser/UpdateUser/@item.Id" class="btn btn-outline-warning">Güncelle</a>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            if (ViewBag.Message != null)
                            {
                                <h3 class="alert alert-warning">@ViewBag.Message</h3>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>