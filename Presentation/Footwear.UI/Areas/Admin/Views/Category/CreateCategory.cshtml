@model CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow p-3">
            <div class="card-header border-0">
                <h3 class="mb-0">Yeni Kategori Girişi</h3>
            </div>
            <form method="post">
                <div class="form-group">
                    <label class="form-label">Kategori Adı</label>
                    <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı" />
                </div>
                @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        @foreach (var item in ViewBag.Errors)
                        {
                            <p>@item</p>

                        }
                    </div>
                }
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
            </form>

        </div>
    </div>
</div>
