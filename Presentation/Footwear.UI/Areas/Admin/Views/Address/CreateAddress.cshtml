@model CreateAddressDto
@{
    ViewData["Title"] = "CreateAddress";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow p-3">
            <div class="card-header border-0">
                <h3 class="mb-0">Yeni Adres Girişi</h3>
            </div>
            <form method="post">
                <div class="form-group">
                    <label class="form-label">Şehir</label>
                    <input type="text" class="form-control" asp-for="City" placeholder="Şehir" />
                </div>
                <div class="form-group">
                    <label class="form-label">Ülke</label>
                    <input type="text" class="form-control" asp-for="Country" placeholder="Ülke" />
                </div>
                <div class="form-group">
                    <label class="form-label">Adres</label>
                    <input type="text" class="form-control" asp-for="AddressDetail" placeholder="Adres" />
                </div>
                <div class="form-group">
                    <label class="form-label">Telefon</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon" />
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
                </div>
                <div class="form-group">
                    <label class="form-label">Web sitesi</label>
                    <input type="text" class="form-control" asp-for="WebSite" placeholder="Web sitesi" />
                </div>
                @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        @foreach (var item in ViewBag.Errors)
                        {
                            <p>@item</p>

                        }
                    </div>
                }
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
            </form>

        </div>
    </div>
</div>

