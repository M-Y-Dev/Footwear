@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0"> Hakkımda  Güncelleme</h3>
            </div>
            <div class="col-md-12">
                <form method="post">
                    <div class="form-group">
                        <label class="form-control-label">Başlık</label>
                        <input type="hidden" asp-for="Id" />
                        <input type="text" class="form-control" asp-for="Title" />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description"  />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Video URL</label>
                        <input type="text" class="form-control" asp-for="VideoUrl"  />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">Değişiklikleri Kaydet</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
