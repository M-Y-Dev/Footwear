@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Yeni Hakkımda  Girişi</h3>
            </div>
            <div class="col-md-12">
                <form method="post">
                <div class="form-group">
                    <label class="form-control-label" for="input-address">Başlık</label>
                    <input id="input-address" class="form-control form-control-alternative" asp-for="Title" placeholder="Başlık"type="text"/>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="input-address">Açıklama</label>
                    <input id="input-address" class="form-control form-control-alternative" asp-for="Description" placeholder="Açıklama" type="text" />
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="input-address">Video URL</label>
                    <input id="input-address" class="form-control form-control-alternative" asp-for="VideoUrl" placeholder="VideoURL" type="text" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Ekle</button>
                </div>
                </form>

            </div>
        </div>
    </div>
</div>
