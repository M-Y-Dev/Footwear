@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow p-3">
            <div class="card-header border-0">
                <h3 class="mb-0">Yeni İletişim Girişi</h3>
            </div>
            <form method="post">
                <div class="form-group">
                    <label class="form-label">Tam isim</label>
                    <input type="text" class="form-control" asp-for="FullName" placeholder="İsim Soyisim" />
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
                </div>
                <div class="form-group">
                    <label class="form-label">Konu</label>
                    <input type="text" class="form-control" asp-for="Subject" placeholder="Konu" />
                </div>
                <div class="form-group">
                    <label class="form-label">Mesaj</label>
                    <input type="text" class="form-control" asp-for="Message" placeholder="Mesaj" />
                </div>
                @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        @foreach (var item in ViewBag.Errors)
                        {
                            <p>@item</p>

                        }
                    </div>
                }
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
            </form>

        </div>
    </div>
</div>

