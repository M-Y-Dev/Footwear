@model List<ResultRoleDto>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Rol Yetkilendirme Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.RoleName
                                </td>
                                <td><a href="/Admin/AppRole/DeleteRole/@item.Id" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Admin/AppRole/UpdateRole/@item.Id" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <td><a href="/Admin/AppRole/CreateRole/" class="btn btn-primary">Yeni Rol Girişi</a></td>


        <div class="col text-center">
            <div class="block-27">
                <br />

            </div>
        </div>
    </div>
</div>